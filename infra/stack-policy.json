{
  "Statement": [
    {
      "Action": ["Update:*"],
      "Condition": {
        "StringEquals": {
          "ResourceType": ["AWS::Lambda::Function", "AWS::Lambda::Permission"]
        }
      },
      "Effect": "Allow",
      "Principal": "*",
      "Resource": "*"
    },
    {
      "Action": ["Update:Delete", "Update:Modify"],
      "Condition": {
        "StringEquals": {
          "ResourceType": ["AWS::ApiGateway::Method"]
        }
      },
      "Effect": "Allow",
      "Principal": "*",
      "Resource": "*"
    },
    {
      "Action": ["Update:Modify"],
      "Condition": {
        "StringEquals": {
          "ResourceType": [
            "AWS::ApiGateway::Deployment",
            "AWS::Events::Rule",
            "AWS::IAM::Role"
          ]
        }
      },
      "Effect": "Allow",
      "Principal": "*",
      "Resource": "*"
    }
  ]
}
