{
  "Statement": [
    {
      "Action": ["Update:*"],
      "Condition": {
        "StringEquals": {
          "ResourceType": [
            "AWS::ApiGateway::Method",
            "AWS::Lambda::Function",
            "AWS::Lambda::Permission"
          ]
        }
      },
      "Effect": "Allow",
      "Principal": "*",
      "Resource": "*"
    },
    {
      "Action": ["Update:Modify"],
      "Condition": {
        "StringEquals": {
          "ResourceType": [
            "AWS::ApiGateway::Authorizer",
            "AWS::ApiGateway::Deployment",
            "AWS::Cognito::UserPool",
            "AWS::Cognito::UserPoolClient",
            "AWS::Cognito::UserPoolDomain",
            "AWS::Events::Rule",
            "AWS::IAM::Role",
            "AWS::SNS::Topic"
          ]
        }
      },
      "Effect": "Allow",
      "Principal": "*",
      "Resource": "*"
    }
  ]
}
